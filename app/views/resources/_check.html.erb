<div class="panel panel-<%= check.success? ? "success" : "danger" %>">
  <div class="panel-heading">
    <h2 class="panel-title">
      <small class="pull-right">
      <% if check.success? %>
      <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
      <% else %>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      <% end %>
      </small>

      <%= t check.type %>
    </h2>
  </div>
  <% unless check.success? %>
  <div class="panel-body">
    <% if check.successes.any? %>
      <h3>Passed</h3>
      <% check.successes.each do |c| %>
      <div class="alert alert-success">
        <strong><%= c[:description] %></strong>
      </div>
      <% end %>
    <% end %>

    <h3>Failures</h3>
    
    <% check.failures.each do |c| %>
      <div class="alert alert-danger">
        <strong><%= c[:description] %></strong><br />
        <pre><%= c[:exception] %></pre>
      </div>
    <% end %>

    <h3>HTTP Log</h3>
    <pre class="http-log"><%= check.stored_http_log.strip %></pre>
  </div>
  <% end %>
</div>