<!DOCTYPE html>
<html>
<head>
  <title>Lodmonitor</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">LOD Monitor</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <%= content_tag("li", class: ("active" if current_page? root_url )) { link_to "Home", root_url } %>
          <%= content_tag("li", class: ("active" if current_page? hosts_url )) { link_to "Hosts", hosts_url } %>
          <%= content_tag("li", class: "active") { link_to @host.name, @host } if @host %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>
  
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
